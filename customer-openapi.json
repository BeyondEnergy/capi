{
  "openapi": "3.0.0",
  "info": {
    "title": "Beyond Energy Customer API",
    "description": "This page describes how to interact with the BeyondEnergy Customer API.\n## Rate limits\n* The `/endpoints` and `/endpoints_buildings` endpoint is restricted to a rate limit of `X / 10` requests every 24 hours, with a lower bound of 30 requests.\n* The `/endpointdata` endpoint is restricted depending on the type of data requested.\n  * For `data_type` `M`, the endpoint is restricted to a rate limit of: `X * 16`, with a total limitation of 200 requests per individual endpoint ID.\n* In all these descriptions, `X` is equal to the amount of endpoints that the API key has access to.\n* `/endpoint_buildings` is a restricted endpoint - ask Beyond Energy for access.",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "http://",
      "description": "Main production server"
    }
  ],
  "paths": {
    "/endpoints": {
      "get": {
        "tags": [
          "Listing"
        ],
        "summary": "Get all accessible endpoints",
        "responses": {
          "200": {
            "description": "Succesful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EndpointList"
                }
              }
            }
          },
          "403": {
            "description": "Unauthenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "Rate limited.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/endpoints_buildings": {
      "get": {
        "tags": [
          "Listing"
        ],
        "summary": "Get all accessible endpoints, organized by building.",
        "responses": {
          "200": {
            "description": "Succesful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EndpointBuildingList"
                }
              }
            }
          },
          "403": {
            "description": "Unauthenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "Rate limited.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/endpointdata/{id}/{start_date}/{end_date}/{data_type}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "schema": {
            "type": "integer"
          },
          "required": true
        },
        {
          "in": "path",
          "name": "start_date",
          "schema": {
            "type": "string",
            "format": "date"
          },
          "required": true,
          "description": "Start date to request from (inclusive)."
        },
        {
          "in": "path",
          "name": "end_date",
          "schema": {
            "type": "string",
            "format": "date"
          },
          "required": true,
          "description": "End date to request until (inclusive)."
        },
        {
          "in": "path",
          "name": "data_type",
          "schema": {
            "type": "string",
            "enum": [
              "M",
              "D",
              "H",
              "Q"
            ]
          },
          "required": true,
          "description": "The data type to fetch. Which data types can be used may be restricted by the API key."
        }
      ],
      "get": {
        "summary": "Get data for a specific aansluiting",
        "tags": [
          "Metingen"
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeasurementList"
                }
              }
            }
          },
          "403": {
            "description": "Unauthenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "Rate limited.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Aansluiting does not exist or API Key is not authorized to view meetdata.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "Unauthorized"
          },
          "message": {
            "type": "string",
            "example": "You are not authorized to access this endpoint."
          }
        },
        "required": [
          "code",
          "message"
        ]
      },
      "EndpointList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Endpoint"
        }
      },
      "EndpointBuildingList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/EndpointBuilding"
        }
      },
      "EndpointBuilding": {
        "type": "object",
        "properties": {
          "object_id": {
            "type": "integer",
            "example": 3021
          },
          "description": {
            "type": "string",
            "example": "ABCDEF"
          },
          "meters": {
            "$ref": "#/components/schemas/ExpandedEndpointList"
          }
        }
      },
      "ExpandedEndpointList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/ExpandedEndpoint"
        }
      },
      "ExpandedEndpoint": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 8064
          },
          "naam": {
            "type": "string",
            "example": "ABCDEF"
          },
          "nuts": {
            "type": "string",
            "example": "A"
          },
          "unit": {
            "type": "string",
            "example": "KWH"
          },
          "type": {
            "type": "string",
            "example": "O"
          },
          "adres": {
            "$ref": "#/components/schemas/Adres"
          }
        }
      },
      "Adres": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 7777
          },
          "naam": {
            "type": "string",
            "example": "ABCDEF"
          },
          "zipcode": {
            "type": "string",
            "example": "ABCDEF"
          },
          "house_nr": {
            "type": "string",
            "example": "12"
          },
          "house_nr_addition": {
            "type": "string",
            "example": "-CE"
          },
          "street": {
            "type": "string",
            "example": "ABCDEF"
          },
          "latitude": {
            "type": "integer",
            "example": 5.1
          },
          "longitude": {
            "type": "integer",
            "example": 5.1
          }
        }
      },
      "Endpoint": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 8064
          },
          "naam": {
            "type": "string",
            "example": "ABCDEF"
          }
        },
        "required": [
          "id",
          "naam"
        ]
      },
      "MeasurementList": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Measurement"
        }
      },
      "Measurement": {
        "type": "object",
        "properties": {
          "measure_date": {
            "type": "string",
            "format": "date-time",
            "example": "2000-01-01T00:00:00Z",
            "description": "The measurement date being requested - the returned date is for the next period (ie. 01-01-2000 will be the usage for January 2000.)"
          },
          "usage": {
            "type": "integer",
            "example": "256",
            "description": "The amount of energy/gas being used or produced during the previous time period."
          },
          "consumption": {
            "type": "boolean",
            "description": "This boolean determines if the requested value under usage is a production or a consumption value. If it is true, the usage value refers to consumption, otherwise it refers to production."
          }
        },
        "required": ["measure_date", "usage", "consumption"]
      }
    },
    "securitySchemes": {
      "APIKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    }
  },
  "security": [
    {
      "APIKeyAuth": []
    }
  ]
}